<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<IsPackable>true</IsPackable>
		<IncludeBuildOutput>false</IncludeBuildOutput>
	</PropertyGroup>

	<PropertyGroup Label="Nuget">
		<Title>Immediate.Handlers</Title>
		<Description>TBD</Description>

		<Authors>Immediate.Handlers Developers</Authors>

		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReadmeFile>readme.md</PackageReadmeFile>

		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<RepositoryUrl>https://github.com/viceroypenguin/Immediate.Handlers</RepositoryUrl>
	</PropertyGroup>

	<!--
	This ensures the library will be packaged as a source generator when we use `dotnet pack`
	-->
	<ItemGroup>
		<None Include="../../readme.md" Pack="true" PackagePath="/" />
		<None Include="$(PkgScriban)/lib/netstandard2.0/Scriban.dll" Pack="true" PackagePath="analyzers/roslyn4.8/dotnet/cs" Visible="false" />
		<None Include="$(OutputPath)Immediate.Handlers.Shared.dll" Pack="true" PackagePath="analyzers/roslyn4.8/dotnet/cs" Visible="true" />
		<None Include="$(OutputPath)Immediate.Handlers.Analyzers.dll" Pack="true" PackagePath="analyzers/roslyn4.8/dotnet/cs" Visible="true" />
		<None Include="$(OutputPath)Immediate.Handlers.CodeFixes.dll" Pack="true" PackagePath="analyzers/roslyn4.8/dotnet/cs" Visible="true" />
		<None Include="$(OutputPath)Immediate.Handlers.Generators.dll" Pack="true" PackagePath="analyzers/roslyn4.8/dotnet/cs" Visible="true" />
		<None Include="$(OutputPath)Immediate.Handlers.Shared.dll" Pack="true" PackagePath="lib/netstandard2.0" Visible="true" />
		<None Include="$(OutputPath)Immediate.Handlers.Shared.xml" Pack="true" PackagePath="lib/netstandard2.0" Visible="true" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Scriban" PrivateAssets="all" GeneratePathProperty="true" />
		<PackageReference Include="MinVer" PrivateAssets="all" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="../Immediate.Handlers.Analyzers/Immediate.Handlers.Analyzers.csproj" />
		<ProjectReference Include="../Immediate.Handlers.CodeFixes/Immediate.Handlers.CodeFixes.csproj" />
		<ProjectReference Include="../Immediate.Handlers.Generators/Immediate.Handlers.Generators.csproj" />
		<ProjectReference Include="../Immediate.Handlers.Shared/Immediate.Handlers.Shared.csproj" />
	</ItemGroup>

	<PropertyGroup Label="MinVer">
		<MinVerAutoIncrement>minor</MinVerAutoIncrement>
		<MinVerDefaultPreReleaseIdentifiers>preview.0</MinVerDefaultPreReleaseIdentifiers>
		<MinVerTagPrefix>v</MinVerTagPrefix>
	</PropertyGroup>

</Project>
